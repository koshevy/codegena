                "schema": {
                  "title": "Abstract Success Response",
                  "description": "An object with abstract data, used in successful response",
                  "type": "object",
                  "properties": {
                    "importantProperty": {
                      "type": "string"
                    },
                    "optionalProperty": {
                      "$ref": "#/components/schemas/NamedEnum"
                    }
                  },
                  "required": ["importantProperty"]
                }
              }
            }
          }
        }
      }
    }
