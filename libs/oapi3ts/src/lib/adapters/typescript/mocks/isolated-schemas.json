      "type": "object",
      "properties": {
        "firstProperty": {
          "type": "number"
        },
        "secondProperty": {
          "type": "string"
        },
        "thirdProperty": {
          "type": "object",
          "nullable": true
        }
      },
      "required": [
        "firstProperty",
        "secondProperty",
        "thirdProperty",
        "fourthProperty"
      ]
    },
    "arrayOfAny": {
      "title": "Simple array with common item definitions (any)",
