{
  "lerna": "2.0.0",
  "version": "independent",
  "command": {
    "publish": {
      "ignoreChanges": [
        "tslint.json",
        "jest.config.js",
        "*.spec.ts",
        "*.sh",
        "lerna.json",
        ".github/workflows/*"
      ],
      "conventionalCommits": true
    },
    "version": {
      "allowBranch": ["master", "release"]
    }
  },
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": ["libs/*"]
}
