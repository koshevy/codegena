{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@codegena/oapi3ts": ["dist/oapi3ts", "libs/oapi3ts/src/index.ts"],
      "@codegena/oapi3ts/*": ["dist/oapi3ts/*", "libs/oapi3ts/src/*"],
      "@codegena/definitions": ["libs/definitions/src/index.ts"],
      "@codegena/definitions/aspects": ["libs/definitions/aspects/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
